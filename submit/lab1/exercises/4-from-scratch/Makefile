PROJECT = key-value

SRC_FILES =		main.c\
			key-value.c\
			key-value.h\
			process-file.c\
			process-file.h\
			README\
			Makefile

CFLAGS = -g -Wall -std=c11

LDFLAGS =

$(PROJECT):		key-value.o process-file.o main.c
			$(CC) key-value.o process-file.o main.c $(LDFLAGS) -o $@

depend:
			$(CC) -MM $(CPPFLAGS) *.c

clean:
			rm -f *.o $(PROJECT) $(PROJECT).tar.gz

dist:			$(PROJECT).tar.gz

$(PROJECT).tar.gz:	$(SRC_FILES)
			tar -cf $(PROJECT).tar $(SRC_FILES)
			gzip -f $(PROJECT).tar

#autogenerated by make depend
main.o: main.c process-file.h
process-file.o: process-file.c key-value.h process-file.h
